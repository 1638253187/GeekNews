<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="6dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:padding="6dp">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_android"
            />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:maxEms="3"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_image"
            android:text="每日一问，哈哈哈"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/id_ren"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/ic_gold_author"
            android:layout_below="@+id/iv_image"

            />
        <TextView
            android:id="@+id/tv_who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_image"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/id_ren"
            android:layout_marginTop="10dp"
            android:text="潇湘剑雨"
            android:textColor="@color/blod" />

        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/iv_image"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/tv_createdAt"
            android:src="@mipmap/ic_time" />

        <TextView
            android:id="@+id/tv_createdAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_image"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="潇湘剑雨"
            android:textColor="@color/blod" />
    </RelativeLayout>
</android.support.v7.widget.CardView>